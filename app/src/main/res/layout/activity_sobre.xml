<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".SobreActivity">

    <Button
            android:text="Seguir"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/btSeguir" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@android:style/Widget.Holo.Button.Small"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent" app:layout_constraintVertical_bias="0.288"
            android:onClick="seguir"/>
    <ImageView
            android:layout_width="188dp"
            android:layout_height="103dp" app:srcCompat="@drawable/if_yoda"
            android:id="@+id/ivImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvVersao" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.23"/>
    <TextView
            android:text="SOBRE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSobre"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="30sp"
            android:textColor="@color/colorAccent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.057"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Carla Tatiana RM 78013 | 2TJDA"
            android:layout_width="335dp"
            android:layout_height="29dp"
            android:id="@+id/tvAutor" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSobre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="18sp"
            android:lineSpacingExtra="10sp" android:textColor="@color/colorAccent" app:fontFamily="monospace"
            app:layout_constraintHorizontal_bias="0.515" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.078"/>
    <TextView
            android:text="Versao APP API 27"
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:id="@+id/tvVersao"
            android:gravity="center" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAutor" app:layout_constraintHorizontal_bias="0.501"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>